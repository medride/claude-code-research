{
  "permissions": {
    "allow": [
      "Bash"
    ],
    "deny": [
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(Invoke-WebRequest:*)",
      "Bash(iwr:*)",
      "Bash(git push --force:*)",
      "Bash(git push -f:*)",
      "Bash(git reset --hard:*)",
      "Bash(format:*)",
      "Bash(fdisk:*)",
      "Bash(diskpart:*)",
      "Bash(reg delete:*)",
      "Bash(Remove-Item -Recurse:*)",
      "Bash(rm -rf /*)",
      "Bash(del /s /q:*)"
    ],
    "ask": []
  },
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "powershell -c (New-Object Media.SoundPlayer 'C:\\Windows\\Media\\Windows Critical Stop.wav').PlaySync()"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -c (New-Object Media.SoundPlayer 'C:\\Windows\\Media\\Windows Critical Stop.wav').PlaySync()"
          }
        ]
      }
    ]
  }
}
